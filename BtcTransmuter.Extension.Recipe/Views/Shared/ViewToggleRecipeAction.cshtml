@using BtcTransmuter.Data.Models
@using BtcTransmuter.Extension.Recipe.Actions.CreateRecipe
@using BtcTransmuter.Extension.Recipe.Actions.ToggleRecipe
@model BtcTransmuter.Data.Entities.RecipeAction
@{
    var data = Model.Get<ToggleRecipeData>();
}

<div>
    Toggle Recipe <a asp-action="EditRecipe" asp-controller="Recipes" asp-route-id="@data.TargetRecipeId" target="_blank">@await Component.InvokeAsync("ViewRecipeName", new {recipeId = data.TargetRecipeId})</a>
    @switch (data.Option)
    {
        case ToggleRecipeData.ToggleRecipeOption.Enable:
            <span> to enabled</span>

            break;
        case ToggleRecipeData.ToggleRecipeOption.Disable:
            <span> to disabled</span>

            break;
        case ToggleRecipeData.ToggleRecipeOption.Toggle:
            <span> to enabled/disabled based on current state</span>

            break;
        default:
            throw new ArgumentOutOfRangeException();
    }
</div>