@model BtcTransmuter.Controllers.EditSystemSettingsViewModel

@{
    ViewData["Title"] = "System Settings";
}

<div class="row">
    <div class="col-lg-12 text-center">
        <partial name="_StatusMessage" model="@Model.StatusMessage"/>
    </div>
</div>
<h2>@ViewData["Title"]</h2>

<partial name="AdminNav"/>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DisableRegistration" class="control-label"></label>
        <input type="checkbox" asp-for="DisableRegistration" class="form-check"/>
        <span asp-validation-for="DisableRegistration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscourageSearchEngines" class="control-label"></label>
        <input type="checkbox" asp-for="DiscourageSearchEngines" class="form-check"/>
        <span asp-validation-for="DiscourageSearchEngines" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>